<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="120dp"
    android:padding="6dip">

    <ImageView
        android:id="@+id/iconPokemon"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="6dip"
        android:contentDescription="TODO"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/attacksPokemon_line"
        android:layout_width="fill_parent"
        android:layout_height="32dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="0dp"
        android:layout_toRightOf="@id/iconPokemon"
        android:singleLine="true"
        android:text="Attack 1, Attack 2, ..."
        android:textSize="12sp" />

    <TextView
        android:id="@+id/typePokemon_line"
        android:layout_width="fill_parent"
        android:layout_height="25dip"
        android:layout_above="@+id/attacksPokemon_line"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="34dp"
        android:layout_toRightOf="@id/iconPokemon"
        android:singleLine="true"
        android:text="Type"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/namePokemon_line"
        android:layout_width="fill_parent"
        android:layout_height="20dp"
        android:layout_alignWithParentIfMissing="true"
        android:layout_above="@+id/typePokemon_line"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginBottom="0dp"
        android:layout_toEndOf="@+id/iconPokemon"
        android:layout_toRightOf="@id/iconPokemon"
        android:gravity="center_vertical"
        android:text="PokÃ©mon"
        android:textSize="28sp" />

</RelativeLayout>