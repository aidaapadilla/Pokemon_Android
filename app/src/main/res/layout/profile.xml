<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/homewallpaperandroid"
    tools:context=".ProfileActivity">

    <ImageView
        android:id="@+id/pokemonsSquare"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_marginStart="-10dp"
        android:layout_marginTop="-10dp"
        android:layout_marginBottom="-10dp"
        app:layout_constraintBottom_toBottomOf="@+id/pokemon3ProfileText"
        app:layout_constraintEnd_toEndOf="@+id/characternameProfileText"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/pokemonsProfileText"
        app:layout_constraintTop_toTopOf="@+id/pokemon1ProfileText"
        app:layout_constraintVertical_bias="0.52"
        app:srcCompat="@drawable/square" />

    <ImageView
        android:id="@+id/objectsSquare"
        android:layout_width="300dp"
        android:layout_height="35dp"
        android:layout_marginTop="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/objectsUserProfileText"
        app:layout_constraintEnd_toEndOf="@+id/pokemonsSquare"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/pokemonsSquare"
        app:layout_constraintTop_toBottomOf="@+id/pokemonsSquare"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/square" />

    <ImageView
        android:id="@+id/moneySquare"
        android:layout_width="300dp"
        android:layout_height="40dp"
        app:layout_constraintBottom_toBottomOf="@+id/moneyUserProfileText"
        app:layout_constraintEnd_toEndOf="@+id/objectsSquare"
        app:layout_constraintStart_toStartOf="@+id/objectsSquare"
        app:layout_constraintTop_toTopOf="@+id/moneyUserProfileText"
        app:srcCompat="@drawable/square" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="300dp"
        android:layout_height="40dp"
        app:layout_constraintBottom_toBottomOf="@+id/pointsProfileText"
        app:layout_constraintEnd_toEndOf="@+id/moneySquare"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/moneySquare"
        app:layout_constraintTop_toTopOf="@+id/pointsProfileText"
        app:srcCompat="@drawable/square" />

    <TextView
        android:id="@+id/characternameProfileText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="monospace"
        android:text="Renata Ballenata 3a"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/avatarProfileImage"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/avatarProfileImage"
        android:layout_width="81dp"
        android:layout_height="74dp"
        android:layout_marginTop="120dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/bulbasaur"
        tools:srcCompat="@drawable/bulbasaur" />

    <TextView
        android:id="@+id/pokemonsProfileText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="monospace"
        android:text="PokÃ©mons"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/pokemon1ProfileText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.191"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/pokemon1ProfileText"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/playButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="50dp"
        android:background="@drawable/yellowsquare"
        android:fontFamily="monospace"
        android:onClick="playClick"
        android:text="PLAY!"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/optionsButton"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/storeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/yellowsquare"
        android:fontFamily="monospace"
        android:onClick="storeButtonClick"
        android:text="BUY"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mapProfileImage"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/objectsProfileText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:fontFamily="monospace"
        android:text="Objects:"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/pokemonsProfileText"
        app:layout_constraintTop_toBottomOf="@+id/pokemonsProfileText"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/mapProfileText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="monospace"
        android:text="Location"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/objectsProfileText"
        app:layout_constraintTop_toBottomOf="@+id/objectsProfileText"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/mapProfileImage"
        android:layout_width="220dp"
        android:layout_height="90dp"
        android:layout_marginTop="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mapUserProfileText"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/map"
        tools:srcCompat="@drawable/map" />

    <TextView
        android:id="@+id/pokemon1ProfileText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:fontFamily="monospace"
        android:text="pokemon 1"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/pokemonsProfileText"
        app:layout_constraintTop_toBottomOf="@+id/characternameProfileText"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/objectsUserProfileText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:fontFamily="monospace"
        android:text="Objects"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/objectsProfileText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/objectsProfileText"
        app:layout_constraintTop_toTopOf="@+id/objectsProfileText" />

    <TextView
        android:id="@+id/mapUserProfileText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:fontFamily="monospace"
        android:text="Name of the map"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/mapProfileText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/mapProfileText"
        app:layout_constraintTop_toTopOf="@+id/mapProfileText"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/pointsProfileText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="monospace"
        android:text="Points"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/mapProfileText"
        app:layout_constraintTop_toBottomOf="@+id/mapProfileImage"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/moneyProfileText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="monospace"
        android:text="Money"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/storeButton"
        app:layout_constraintEnd_toEndOf="@+id/moneySquare"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/pointsProfileText"
        app:layout_constraintTop_toBottomOf="@+id/pointsProfileText"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/pointsUserProfileText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:fontFamily="monospace"
        android:text="Number of points"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/pointsProfileText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/pointsProfileText"
        app:layout_constraintTop_toTopOf="@+id/pointsProfileText" />

    <TextView
        android:id="@+id/moneyUserProfileText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:fontFamily="monospace"
        android:text="Money"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/moneyProfileText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/moneyProfileText"
        app:layout_constraintTop_toTopOf="@+id/moneyProfileText" />

    <TextView
        android:id="@+id/pokemon2ProfileText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:fontFamily="monospace"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/pokemon1ProfileText"
        app:layout_constraintTop_toBottomOf="@+id/pokemonsProfileText"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/pokemon3ProfileText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:fontFamily="monospace"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/pokemon1ProfileText"
        app:layout_constraintTop_toBottomOf="@+id/pokemon2ProfileText"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/optionsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/yellowsquare"
        android:fontFamily="monospace"
        android:onClick="optionsClick"
        android:text="Options"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/storeButton"
        app:layout_constraintEnd_toStartOf="@+id/playButton"
        app:layout_constraintStart_toEndOf="@+id/storeButton"
        app:layout_constraintTop_toTopOf="@+id/storeButton" />

    <ProgressBar
        android:id="@+id/progressBarProfile"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/optionsButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/moneyUserProfileText" />

</androidx.constraintlayout.widget.ConstraintLayout>